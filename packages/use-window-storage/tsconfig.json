{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "dist",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": false,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "*.config.ts"]
}
